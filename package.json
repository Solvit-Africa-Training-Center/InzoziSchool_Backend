{
  "name": "inzozi",
  "version": "1.0.0",
  "description": "\"Inzozi platform\"",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Solvit-Africa-Training-Center/InzoziSchool_Backend.git"
  },
  "author": "Ganza & Serge",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Solvit-Africa-Training-Center/InzoziSchool_Backend/issues"
  },
  "homepage": "https://github.com/Solvit-Africa-Training-Center/InzoziSchool_Backend#readme",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "start": "node ./dist/index.js",
    "test": "cross-env NODE_ENV=test npm run db:migrate:undo:all && npm run db:migrate && npm run db:seed && jest --detectOpenHandles --config jest.config.ts",
    "coverage": "NODE_ENV=test jest --coverage --config jest.config.ts",
    "coveralls": "npm run coverage && cat coverage/lcov.info | npx coveralls",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo:all": "sequelize-cli db:seed:undo:all",
    "migration:make": "sequelize-cli migration:generate --name",
    "seed:make": "sequelize-cli seed:generate --name",
    "reset-db": "npm run db:migrate:undo:all && npm run db:migrate && npm run db:seed",
    "db:migrate:prod": "sequelize-cli db:migrate --env production",
    "db:migrate:undo:all:prod": "sequelize-cli db:migrate:undo:all --env production",
    "db:seed:prod": "sequelize-cli db:seed:all --env production",
    "db:seed:undo:all:prod": "sequelize-cli db:seed:undo:all --env production",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:down:clean": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f backend",
    "docker:db": "docker-compose exec postgres psql -U postgres -d inzozi"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.1",
    "@types/sequelize": "^4.28.20",
    "@types/streamifier": "^0.1.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "coveralls": "^3.1.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jest": "^30.0.0",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "i18next": "^25.4.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^7.0.6",
    "path": "^0.12.7",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.8.2",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "streamifier": "^0.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
